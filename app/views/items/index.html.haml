= render 'items/shared/header'
.center
  .center-banner
    = image_tag "https://www-mercari-jp.akamaized.net/assets/img/featured/camp/index/index_keyvisual.png" ,class: "camp"

  .center-category
    %h3.center-category-upper 人気のカテゴリー

    %ul.center-category__lower
      - @populer_categories.each do |category,i|
        %li.center-category__lower__details
          .center-category__lower__details__topic
            = link_to category.name, '#', class: "link"


  .center-mid
