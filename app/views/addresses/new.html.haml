.registration_container
  = render 'devise/registrations/progress_header'
  .registration_container__main
    %section.registration_container__main__contents
      .registration_container__main__contents__head
        %h2 住所入力
      -# form_with...仮置きのためテーブル完成により要変更
      = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
        .fields
          .field
            = f.label :password, '郵便番号'
            %span.must 必須
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: '例) 123-4567', class: 'input-default'
          .field
            = f.label :password_confirmation, '都道府県'
            %span.must 必須
            %br/
            = f.collection_select :prefecture_id, Prefecture.where.not(id: 48), :id, :name
          .field
            = f.label :nickname, '市区町村'
            %span.must 必須
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: '例) 横浜市緑区', class: 'input-default'
          .field
            = f.label :nickname, '番地'
            %span.must 必須
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: '例) 青山1-1-1', class: 'input-default'
          .field
            = f.label :nickname, '建物名'
            %span.free 任意
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: '例) 柳ビル103', class: 'input-default'
          .field
            = f.label :nickname, '電話'
            %span.free 任意
            %br/
            = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: '例) 09012345678', class: 'input-default'
          .actions
            = f.submit "次へ進む", class: 'next-btn', value: '次へ進む'
  = render 'devise/registrations/footer'
:css
  li.three{
    color: #ea352d !important;
    font-weight: 600 !important;
  }
  .first,.second,.third{
    background: #ea352d !important;
  }
  .first::after, .second::before, .second::after, .third::before{
    background: #ea352d !important;
  }
